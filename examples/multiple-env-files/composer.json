{
    "require": {
        "diarmuidie/envpopulate": "^2.0"
    },
    "scripts": {
        "post-install-cmd": [
            "Diarmuidie\\EnvPopulate\\ScriptHandler::populateEnv"
        ],
        "post-update-cmd": [
            "Diarmuidie\\EnvPopulate\\ScriptHandler::populateEnv"
        ]
    },
    "extra": {
        "env-populate": {
            "files": [
                {
                    "example-file": ".env.server.dist",
                    "generated-file": ".env.server"
                },
                {
                    "example-file": ".env.dist",
                    "generated-file": ".env"
                }
            ],
            "run-non-interactively": false
        }
    }
}
